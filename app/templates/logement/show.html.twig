            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ logement.Ville }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ logement.pays }}</td>
            </tr>
            <tr>
                <th>ImagePath</th>
                <td>{{ logement.imagePath }}</td>
            </tr>
            <tr>
                <th>Name</th>
