{% block title %}Logement{% endblock %}

{% block body %}
    <h1>Logement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ logement.id }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ logement.prix }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ logement.taille }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ logement.description }}</td>
            </tr>
            <tr>
                <th>Couchage</th>
                <td>{{ logement.couchage }}</td>
            </tr>
            <tr>
